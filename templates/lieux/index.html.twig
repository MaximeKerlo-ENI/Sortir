{% extends 'layouts/base.html.twig' %}

{% block title %}Lieux index{% endblock %}

{% block main %}
    <h1>Lieux index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>NoLieu</th>
                <th>NomLieu</th>
                <th>Rue</th>
                <th>Latitude</th>
                <th>Longitude</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for lieux in lieuxes %}
            <tr>
                <td>{{ lieux.noLieu }}</td>
                <td>{{ lieux.nomLieu }}</td>
                <td>{{ lieux.rue }}</td>
                <td>{{ lieux.latitude }}</td>
                <td>{{ lieux.longitude }}</td>
                <td>
