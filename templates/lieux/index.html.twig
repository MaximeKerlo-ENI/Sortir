                <a class="btn-floating btn-small waves-effect waves-light green lighten-1" href="{{ path('app_lieux_edit', {'noLieu': lieux.noLieu}) }}"><i class="material-icons">edit</i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="row">
    <a class="waves-effect waves-light green lighten-1 btn" href="{{ path('app_lieux_new') }}"><i class="material-icons right">add_circle</i>Cr√©er</a>
