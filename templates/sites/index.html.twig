{% extends 'layouts/base.html.twig' %}

{% block title %}Sites index{% endblock %}

{% block main %}
    <h1>Sites index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>NoSite</th>
                <th>NomSite</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for site in sites %}
            <tr>
                <td>{{ site.noSite }}</td>
                <td>{{ site.nomSite }}</td>
                <td>
                    <a class="btn-floating btn-small waves-effect waves-light green lighten-1" href="{{ path('app_sites_show', {'noSite': site.noSite}) }}"><i class="material-icons">remove_red_eye</i></a>
                    <a class="btn-floating btn-small waves-effect waves-light green lighten-1" href="{{ path('app_sites_edit', {'noSite': site.noSite}) }}"><i class="material-icons">edit</i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="row">
    <a class="waves-effect waves-light green lighten-1 btn" href="{{ path('app_sites_new') }}"><i class="material-icons right">add_circle</i>Cr√©er</a>
    </div>
{% endblock %}
