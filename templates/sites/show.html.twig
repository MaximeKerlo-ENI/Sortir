{% extends 'layouts/base.html.twig' %}

{% block title %}Sites
{% endblock %}

{% block main %}
	<h1>Sites</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>NoSite</th>
				<td>{{ site.noSite }}</td>
			</tr>
			<tr>
				<th>NomSite</th>
				<td>{{ site.nomSite }}</td>
			</tr>
		</tbody>
	</table>

	<div class="row">	
	{{ include('sites/_delete_form.html.twig') }}
	<span class="col"></span>	
