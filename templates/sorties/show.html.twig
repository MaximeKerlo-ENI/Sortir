{% extends 'layouts/base.html.twig' %}

{% block title %}Sorties{% endblock %}

{% block main %}
    <h1>Sorties</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Numéro</th>
                <td>{{ sorty.noSortie }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ sorty.nom }}</td>
            </tr>
            <tr>
                <th>Date début</th>
                <td>{{ sorty.datedebut ? sorty.datedebut|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Durée</th>
                <td>{{ sorty.duree }}</td>
            </tr>
            <tr>
                <th>Date cloture</th>
                <td>{{ sorty.datecloture ? sorty.datecloture|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Nombre maximum d'inscriptions</th>
                <td>{{ sorty.nbinscriptionsmax }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ sorty.descriptioninfos }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td>{{ sorty.urlphoto }}</td>
            </tr>
        </tbody>
    </table>
    <div class="row">
        <a class="waves-effect waves-light green lighten-1 btn col" href="{{ path('app_accueil') }}">Retour accueil</a>

        <a class="waves-effect waves-light green lighten-1 btn" href="{{ path('app_sorties_edit', {'noSortie': sorty.noSortie}) }}">Modifier</a>

        <a class="waves-effect waves-light green lighten-1 btn" href="{{ path('app_sorties_cancel', {'noSortie': sorty.noSortie}) }}">Annuler la sortie</a>

        {{ include('sorties/_delete_form.html.twig') }}
    </div>
    
{% endblock %}
