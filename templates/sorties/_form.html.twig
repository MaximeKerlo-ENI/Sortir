{{ form_start(sortieForm) }}
<style>
  .parent {
    display: grid;
    grid-template-columns: repeat(5, 1fr);
    grid-template-rows: repeat(7, 1fr);
    grid-column-gap: 0px;
    grid-row-gap: 0px;
  }

  .div1 {
    grid-area: 1 / 1 / 2 / 6;
  }
  .div2 {
    grid-area: 2 / 1 / 3 / 5;
  }
  .div3 {
    grid-area: 3 / 1 / 4 / 5;
  }
  .div4 {
    grid-area: 3 / 5 / 4 / 6;
  }
  .div5 {
    grid-area: 4 / 1 / 5 / 6;
  }
  .div6 {
    grid-area: 5 / 1 / 6 / 6;
  }
  .div7 {
    grid-area: 6 / 1 / 7 / 5;
  }
  .div8 {
    grid-area: 7 / 1 / 8 / 5;
  }
</style>
<div class="row">
  <div class="col s6">
    {{ form_row(sortieForm.nom) }}
    {{ form_row(sortieForm.datedebut) }}
    {{ form_row(sortieForm.datecloture) }}
    {{ form_row(sortieForm.nbinscriptionsmax) }}
    {{ form_row(sortieForm.duree) }}
    {{ form_row(sortieForm.descriptioninfos) }}
  </div>

  <div class="col s6">
    <div class="parent">
      <div class="div1" id="maDiv1"><label for="monParagraphe">Ville organisatrice</label><p id="monParagraphe">{{ app.user.sitesNoSite.nomSite }}</p></div>
      <div class="div2" id="maDiv2">{{ form_row(sortieForm.villesNoVilles, { 'id': 'select_ville'}) }}</div>
      <div class="div3" id="maDiv3">{{ form_row(sortieForm.lieuxNoLieu, { 'id': 'select_lieu'}) }}</div>
      <div class="div4" id="maDiv4">
        <a href="{{ path('app_lieux_new') }}" class="btn-floating btn-large waves-effect waves-light red"><i class="material-icons">add</i></a>
      </div>
      <div class="div5" id="maDiv5"><label for=""></label></div>
      <div class="div6" id="maDiv6"></div>
      <div class="div7" id="maDiv7"></div> 
      <div class="div8" id="maDiv8"></div>
  </div>
</div>

<div class="center">
  <button type="submit" class="btn green lighten-1" name="create">
    {{ button_save|default('Enregistrer') }}
  </button>
  <button type="submit" class="btn green lighten-1" name="open">
    {{ button_label|default('Publier la sortie') }}
  </button>
  <a
    class="btn green lighten-1"
    href="{{ path('app_accueil') }}"
    >{{ button_label|default('Annuler') }}</a
  >
</div>

{{ form_end(sortieForm) }}