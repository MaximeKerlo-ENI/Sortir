<header>
  <nav class="green lighten-1">
    <a href="#" data-target="mobile-demo" class="sidenav-trigger"><i class="material-icons">menu</i></a>
    <div class="nav-wrapper container">
      <a href="{{ path('app_accueil') }}" class="brand-logo">Sortir.com</a>
      <ul class="right hide-on-med-and-down">
        {% for ele in menu %}
        {% if is_granted('ROLE_ADMIN') %}
        <li><a class='dropdown-button' data-activates='dropdownAdmin' data-beloworigin="true"
            id="mainDrop">Administration<i class="material-icons right">arrow_drop_down</i></a></li>
        {% endif %}
        <li><a href="{{ path('app_' ~ ele|lower) }}">{{ele}}</a></li>
        {% if not app.user %}
        <li><a href="{{ path('app_register') }}">Inscription</a></li>
        <li><a href="{{ path('app_login') }}">Connexion</a></li>
        {% else %}
        <li><a href="{{ path('app_participants_edit', {'noParticipant': app.user.noParticipant}) }}">Mon Profil</a></li>
        <li><a href="{{ path('app_logout') }}">Déconnexion</a></li>
        {% endif %}
        {% endfor %}
      </ul>
    </div>
  </nav>

  <ul id='dropdownAdmin' class='dropdown-content'>
    <li><a href="{{ path('app_participants_index') }}">Utilisateurs</a></li>
    <li><a href="{{ path('app_villes_index') }}">Villes</a></li>
    <li><a href="{{ path('app_sites_index') }}">Sites</a></li>
  </ul>

  <ul class="sidenav" id="mobile-demo">
    {% for ele in menu %}
    {% if is_granted('ROLE_ADMIN') %}
    <li><a href="{{ path('app_participants_index') }}">Utilisateurs</a></li>
    <li><a href="{{ path('app_villes_index') }}">Villes</a></li>
    <li><a href="{{ path('app_sites_index') }}">Sites</a></li>
    {% endif %}
    <li><a href="{{ path('app_' ~ ele|lower) }}">{{ele}}</a></li>
    {% if not app.user %}
    <li><a href="{{ path('app_register') }}">Inscription</a></li>
    <li><a href="{{ path('app_login') }}">Connexion</a></li>
    {% else %}
    <li><a href="{{ path('app_participants_edit', {'noParticipant': app.user.noParticipant}) }}">Mon Profil</a></li>
    <li><a href="{{ path('app_logout') }}">Déconnexion</a></li>
    {% endif %}
    {% endfor %}
  </ul>
</header>