{% extends 'layouts/base.html.twig' %}

{% block title %}Participants index{% endblock %}

{% block main %}
    <h1>Participants index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>NoParticipant</th>
                <th>Pseudo</th>
                <th>Roles</th>
                <th>Password</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Telephone</th>
                <th>Mail</th>
                <th>Actif</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for participant in participants %}
            <tr>
                <td>{{ participant.noParticipant }}</td>
                <td>{{ participant.pseudo }}</td>
                <td>{{ participant.roles ? participant.roles|json_encode : '' }}</td>
                <td>{{ participant.nom }}</td>
                <td>{{ participant.prenom }}</td>
                <td>{{ participant.telephone }}</td>
                <td>{{ participant.mail }}</td>
                <td>{{ participant.actif ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_participants_show', {'noParticipant': participant.noParticipant}) }}">show</a>
                    <a href="{{ path('app_participants_adminedit', {'noParticipant': participant.noParticipant}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_participants_new') }}">Create new</a>
{% endblock %}
